{
  "name": "demo-orchestrated-auth",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/auth/demo-orchestrated-auth"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "build"
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../../libs/cli/dist/src/cli.js test --runInBand",
        "cwd": "apps/auth/demo-orchestrated-auth"
      },
      "dependsOn": ["^build"]
    }
  }
}
