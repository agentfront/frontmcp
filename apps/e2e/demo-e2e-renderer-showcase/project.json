{
  "name": "demo-e2e-renderer-showcase",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/e2e/demo-e2e-renderer-showcase/src",
  "projectType": "application",
  "tags": ["scope:e2e"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/e2e/demo-e2e-renderer-showcase"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "demo-e2e-renderer-showcase:build",
        "port": 4400
      }
    },
    "test:pw": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx playwright test --config=apps/e2e/demo-e2e-renderer-showcase/playwright.config.ts",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
