{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@frontmcp/adapters": ["libs/adapters/src/index.ts"],
      "@frontmcp/plugins": ["libs/plugins/src/index.ts"],
      "@frontmcp/sdk": ["libs/sdk/src/index.ts"],
      "@frontmcp/testing": ["libs/testing/src/index.ts"],
      "@frontmcp/uipack": ["libs/uipack/src/index.ts"],
      "@frontmcp/uipack/types": ["libs/uipack/src/types/index.ts"],
      "@frontmcp/uipack/adapters": ["libs/uipack/src/adapters/index.ts"],
      "@frontmcp/uipack/build": ["libs/uipack/src/build/index.ts"],
      "@frontmcp/uipack/renderers": ["libs/uipack/src/renderers/index.ts"],
      "@frontmcp/uipack/components": ["libs/uipack/src/components/index.ts"],
      "@frontmcp/uipack/runtime": ["libs/uipack/src/runtime/index.ts"],
      "@frontmcp/uipack/theme": ["libs/uipack/src/theme/index.ts"],
      "@frontmcp/uipack/bridge": ["libs/uipack/src/bridge/index.ts"],
      "@frontmcp/uipack/web-components": ["libs/uipack/src/web-components/index.ts"],
      "@frontmcp/uipack/styles": ["libs/uipack/src/styles/index.ts"],
      "@frontmcp/uipack/registry": ["libs/uipack/src/registry/index.ts"],
      "@frontmcp/uipack/utils": ["libs/uipack/src/utils/index.ts"],
      "@frontmcp/uipack/layouts": ["libs/uipack/src/layouts/index.ts"],
      "@frontmcp/uipack/pages": ["libs/uipack/src/pages/index.ts"],
      "@frontmcp/uipack/validation": ["libs/uipack/src/validation/index.ts"],
      "@frontmcp/uipack/widgets": ["libs/uipack/src/widgets/index.ts"],
      "@frontmcp/uipack/dependency": ["libs/uipack/src/dependency/index.ts"],
      "@frontmcp/uipack/handlebars": ["libs/uipack/src/handlebars/index.ts"],
      "@frontmcp/uipack/typings": ["libs/uipack/src/typings/index.ts"],
      "@frontmcp/uipack/bundler": ["libs/uipack/src/bundler/index.ts"],
      "@frontmcp/ui": ["libs/ui/src/index.ts"],
      "@frontmcp/ui/renderers": ["libs/ui/src/renderers/index.ts"],
      "@frontmcp/ui/react": ["libs/ui/src/react/index.ts"],
      "@frontmcp/ui/render": ["libs/ui/src/render/index.ts"],
      "@frontmcp/ui/universal": ["libs/ui/src/universal/index.ts"],
      "@frontmcp/ui/bundler": ["libs/ui/src/bundler/index.ts"],
      "json-schema-to-zod-v3": ["libs/json-schema-to-zod-v3/src/index.ts"],
      "mcp-from-openapi": ["libs/mcp-from-openapi/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
