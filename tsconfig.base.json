{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": [
      "es2021",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@frontmcp/sdk": [
        "libs/sdk/src/index.ts"
      ],
      "@frontmcp/core": [
        "libs/core/src/index.ts"
      ],
      "@frontmcp/plugins": [
        "libs/plugins/src/index.ts"
      ],
      "@frontmcp/adapters": [
        "libs/adapters/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
