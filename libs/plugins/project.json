{
  "name": "plugins",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/plugins/src",
  "projectType": "library",
  "tags": ["scope:libs", "scope:publishable", "versioning:synchronized"],
  "implicitDependencies": ["plugin-cache", "plugin-codecall", "plugin-config", "plugin-dashboard", "plugin-remember"],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/plugins/dist",
        "main": "libs/plugins/src/index.ts",
        "tsConfig": "libs/plugins/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "libs/plugins/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/plugins/README.md", "LICENSE", "libs/plugins/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": [
            "@frontmcp/plugin-cache",
            "@frontmcp/plugin-codecall",
            "@frontmcp/plugin-config",
            "@frontmcp/plugin-dashboard",
            "@frontmcp/plugin-remember",
            "reflect-metadata"
          ]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/plugins/dist/esm",
        "main": "libs/plugins/src/index.ts",
        "tsConfig": "libs/plugins/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": [
            "@frontmcp/plugin-cache",
            "@frontmcp/plugin-codecall",
            "@frontmcp/plugin-config",
            "@frontmcp/plugin-dashboard",
            "@frontmcp/plugin-remember",
            "reflect-metadata"
          ]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/plugins/dist/package.json"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/unit/plugins"],
      "options": {
        "jestConfig": "libs/plugins/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/plugins/dist --access public --registry=https://registry.npmjs.org/"
      }
    },
    "publish-alpha": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "bash scripts/publish-alpha.sh {projectRoot}/dist",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
