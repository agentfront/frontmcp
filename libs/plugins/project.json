{
  "name": "plugins",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/plugins/src",
  "projectType": "library",
  "tags": ["scope:libs", "scope:publishable", "versioning:synchronized"],
  "implicitDependencies": ["plugin-cache", "plugin-codecall", "plugin-dashboard", "plugin-remember"],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/plugins/dist",
        "main": "libs/plugins/src/index.ts",
        "tsConfig": "libs/plugins/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "libs/plugins/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/plugins/README.md", "LICENSE", "libs/plugins/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": [
            "@frontmcp/plugin-cache",
            "@frontmcp/plugin-codecall",
            "@frontmcp/plugin-dashboard",
            "@frontmcp/plugin-remember",
            "reflect-metadata"
          ]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/plugins/dist/esm",
        "main": "libs/plugins/src/index.ts",
        "tsConfig": "libs/plugins/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": [
            "@frontmcp/plugin-cache",
            "@frontmcp/plugin-codecall",
            "@frontmcp/plugin-dashboard",
            "@frontmcp/plugin-remember",
            "reflect-metadata"
          ]
        }
      }
    },
    "build-browser-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/plugins/dist/browser",
        "main": "libs/plugins/src/browser.ts",
        "tsConfig": "libs/plugins/tsconfig.lib.json",
        "format": ["esm"],
        "platform": "browser",
        "bundle": true,
        "thirdParty": true,
        "minify": false,
        "skipTypeCheck": true,
        "external": [
          "zod",
          "reflect-metadata",
          "@frontmcp/plugin-cache",
          "@frontmcp/plugin-dashboard",
          "@frontmcp/plugin-remember",
          "@frontmcp/plugin-approval"
        ],
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "alias": {
            "node:async_hooks": "./libs/sdk/src/browser/shims/async-hooks.ts",
            "node:crypto": "./libs/sdk/src/browser/shims/crypto.ts",
            "node:fs": "./libs/sdk/src/browser/shims/fs.ts",
            "node:fs/promises": "./libs/sdk/src/browser/shims/fs.ts",
            "node:path": "./libs/sdk/src/browser/shims/path.ts",
            "node:os": "./libs/sdk/src/browser/shims/os.ts",
            "child_process": "./libs/sdk/src/browser/shims/empty.ts",
            "node:child_process": "./libs/sdk/src/browser/shims/empty.ts",
            "path": "./libs/sdk/src/browser/shims/path.ts",
            "crypto": "./libs/sdk/src/browser/shims/crypto.ts",
            "fs": "./libs/sdk/src/browser/shims/fs.ts",
            "fs/promises": "./libs/sdk/src/browser/shims/fs.ts",
            "events": "./libs/sdk/src/browser/shims/events.ts",
            "node:events": "./libs/sdk/src/browser/shims/events.ts",
            "ioredis": "./libs/sdk/src/browser/shims/empty.ts",
            "express": "./libs/sdk/src/browser/shims/empty.ts"
          },
          "define": {
            "process.env.NODE_ENV": "\"production\""
          }
        }
      }
    },
    "build-browser-umd": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-browser-esm"],
      "outputs": ["{workspaceRoot}/libs/plugins/dist/browser/browser.js"],
      "options": {
        "command": "node scripts/build-browser-umd.mjs libs/plugins/src/browser.ts libs/plugins/dist/browser/browser.js FrontMCPPlugins --external=zod --external=reflect-metadata --external=@frontmcp/plugin-cache --external=@frontmcp/plugin-dashboard --external=@frontmcp/plugin-remember --external=@frontmcp/plugin-approval"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm", "build-browser-esm", "build-browser-umd"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/plugins/dist/package.json"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/unit/plugins"],
      "options": {
        "jestConfig": "libs/plugins/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/plugins/dist --access public --registry=https://registry.npmjs.org/"
      }
    },
    "publish-alpha": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "bash scripts/publish-alpha.sh {projectRoot}/dist",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
