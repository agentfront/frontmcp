{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "paths": {
      "@frontmcp/sdk": ["libs/sdk/src/index.ts"],
      "@frontmcp/di": ["libs/di/dist/index.d.ts"],
      "@frontmcp/uipack": ["libs/uipack/dist/index.d.ts"],
      "@frontmcp/uipack/*": ["libs/uipack/dist/*/index.d.ts"],
      "@frontmcp/ui": ["libs/ui/dist/index.d.ts"],
      "@frontmcp/ui/*": ["libs/ui/dist/*/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "src/**/__test-utils__/**"
  ]
}
