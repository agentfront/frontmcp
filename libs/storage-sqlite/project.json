{
  "name": "storage-sqlite",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/storage-sqlite/src",
  "projectType": "library",
  "tags": ["scope:libs", "scope:publishable", "versioning:synchronized"],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/unit/storage-sqlite"],
      "options": {
        "jestConfig": "libs/storage-sqlite/jest.config.ts"
      }
    },
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/storage-sqlite/dist",
        "main": "libs/storage-sqlite/src/index.ts",
        "tsConfig": "libs/storage-sqlite/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "libs/storage-sqlite/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/storage-sqlite/README.md", "LICENSE", "libs/storage-sqlite/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": ["@frontmcp/utils", "@frontmcp/sdk", "better-sqlite3", "zod"]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/storage-sqlite/dist/esm",
        "main": "libs/storage-sqlite/src/index.ts",
        "tsConfig": "libs/storage-sqlite/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "skipTypeCheck": true,
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": ["@frontmcp/utils", "@frontmcp/sdk", "better-sqlite3", "zod"]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/storage-sqlite/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/storage-sqlite/dist --access public --registry=https://registry.npmjs.org/"
      }
    },
    "publish-alpha": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "bash scripts/publish-alpha.sh {projectRoot}/dist",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
