{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "types": ["jest", "node"],
    "paths": {
      "@frontmcp/sdk": ["libs/sdk/dist/src/index.d.ts"],
      "@frontmcp/sdk/core": ["libs/sdk/dist/src/core/index.d.ts"],
      "@frontmcp/sdk/*": ["libs/sdk/dist/src/*/index.d.ts"]
    }
  },
  "include": [
    "jest.config.ts",
    "src/test-setup.ts",
    "src/test-setup-jsdom.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__/**/*.ts"
  ]
}
