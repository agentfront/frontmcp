{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@frontmcp/sdk": ["libs/sdk/dist/src/index.d.ts"],
      "@frontmcp/sdk/core": ["libs/sdk/dist/src/core/index.d.ts"],
      "@frontmcp/sdk/*": ["libs/sdk/dist/src/*/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "src/**/__test-utils__/**",
    "src/**/test-setup*.ts"
  ]
}
