{
  "name": "uipack",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/uipack/src",
  "projectType": "library",
  "tags": ["scope:libs", "scope:publishable", "versioning:synchronized"],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/uipack/dist",
        "main": "libs/uipack/src/index.ts",
        "tsConfig": "libs/uipack/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "libs/uipack/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/uipack/README.md", "libs/uipack/CLAUDE.md", "LICENSE", "libs/uipack/package.json"],
        "additionalEntryPoints": [
          "libs/uipack/src/bridge-runtime/index.ts",
          "libs/uipack/src/component/index.ts",
          "libs/uipack/src/resolver/index.ts",
          "libs/uipack/src/shell/index.ts",
          "libs/uipack/src/types/index.ts",
          "libs/uipack/src/typings/index.ts",
          "libs/uipack/src/utils/index.ts"
        ],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": [
            "@frontmcp/utils",
            "onnxruntime-*",
            "esbuild",
            "@huggingface/transformers",
            "react",
            "react/*",
            "react-dom",
            "react-dom/*"
          ]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/uipack/dist/esm",
        "main": "libs/uipack/src/index.ts",
        "tsConfig": "libs/uipack/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "additionalEntryPoints": [
          "libs/uipack/src/bridge-runtime/index.ts",
          "libs/uipack/src/component/index.ts",
          "libs/uipack/src/resolver/index.ts",
          "libs/uipack/src/shell/index.ts",
          "libs/uipack/src/types/index.ts",
          "libs/uipack/src/typings/index.ts",
          "libs/uipack/src/utils/index.ts"
        ],
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": [
            "@frontmcp/utils",
            "onnxruntime-*",
            "esbuild",
            "@huggingface/transformers",
            "react",
            "react/*",
            "react-dom",
            "react-dom/*"
          ]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/uipack/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/uipack/dist --access public --registry=https://registry.npmjs.org/"
      }
    },
    "publish-alpha": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "bash scripts/publish-alpha.sh {projectRoot}/dist",
        "cwd": "{workspaceRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/uipack"],
      "options": {
        "jestConfig": "libs/uipack/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
