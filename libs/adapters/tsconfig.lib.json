{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "paths": {
      "@frontmcp/ui": ["libs/ui/dist/src/index.d.ts"],
      "@frontmcp/ui/*": ["libs/ui/dist/src/*/index.d.ts"],
      "@frontmcp/sdk": ["libs/sdk/dist/src/index.d.ts"],
      "@frontmcp/sdk/*": ["libs/sdk/dist/src/*/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "src/**/__test-utils__/**"
  ]
}
