{
  "name": "adapters",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/adapters/src",
  "projectType": "library",
  "tags": ["scope:libs", "scope:publishable", "versioning:synchronized"],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/unit/adapters"],
      "options": {
        "jestConfig": "libs/adapters/jest.config.ts"
      }
    },
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/adapters/dist",
        "main": "libs/adapters/src/index.ts",
        "tsConfig": "libs/adapters/tsconfig.lib.json",
        "format": ["cjs"],
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/adapters/README.md", "LICENSE", "libs/adapters/package.json"],
        "additionalEntryPoints": ["libs/adapters/src/openapi/index.ts"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": [
            "@frontmcp/sdk",
            "@frontmcp/sdk/*",
            "@modelcontextprotocol/sdk",
            "@modelcontextprotocol/sdk/*",
            "openapi-types",
            "mcp-from-openapi",
            "zod-from-json-schema",
            "zod"
          ]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/adapters/dist/esm",
        "main": "libs/adapters/src/index.ts",
        "tsConfig": "libs/adapters/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "additionalEntryPoints": ["libs/adapters/src/openapi/index.ts"],
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": [
            "@frontmcp/sdk",
            "@frontmcp/sdk/*",
            "@modelcontextprotocol/sdk",
            "@modelcontextprotocol/sdk/*",
            "openapi-types",
            "mcp-from-openapi",
            "zod-from-json-schema",
            "zod"
          ]
        }
      }
    },
    "build-types": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc -p libs/adapters/tsconfig.lib.json --emitDeclarationOnly --declaration --declarationMap --outDir libs/adapters/dist"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-types", "build-cjs", "build-esm"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/adapters/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/adapters/dist --access public --registry=https://registry.npmjs.org/"
      }
    },
    "publish-alpha": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "bash scripts/publish-alpha.sh {projectRoot}/dist",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
