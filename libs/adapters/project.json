{
  "name": "adapters",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/adapters/src",
  "projectType": "library",
  "tags": [
    "scope:libs"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "libs/adapters/dist",
        "main": "libs/adapters/src/index.ts",
        "tsConfig": "libs/adapters/tsconfig.lib.json",
        "assets": [
          "libs/adapters/*.md"
        ]
      }
    },
    "fix-pkg": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/adapters/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "fix-pkg"
      ],
      "options": {
        "command": "npm publish libs/adapters/dist --access public"
      }
    }
  }
}
