{
  "name": "@frontmcp/testing",
  "version": "0.12.0-rc.1",
  "description": "E2E testing framework for FrontMCP servers - MCP client, auth mocks, Playwright integration",
  "author": "AgentFront <info@agentfront.dev>",
  "homepage": "https://docs.agentfront.dev",
  "license": "Apache-2.0",
  "keywords": [
    "mcp",
    "testing",
    "e2e",
    "integration-testing",
    "mcp-client",
    "playwright",
    "agentfront",
    "frontmcp",
    "framework",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agentfront/frontmcp.git"
  },
  "bugs": {
    "url": "https://github.com/agentfront/frontmcp/issues"
  },
  "type": "commonjs",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/esm/index.mjs"
      }
    },
    "./setup": {
      "development": "./src/setup.ts",
      "require": {
        "types": "./dist/setup.d.ts",
        "default": "./dist/setup.js"
      },
      "import": {
        "types": "./dist/setup.d.ts",
        "default": "./dist/esm/setup.mjs"
      }
    },
    "./jest-preset": {
      "default": "./jest-preset.js"
    },
    "./fixtures": {
      "development": "./src/fixtures/index.ts",
      "require": {
        "types": "./dist/fixtures/index.d.ts",
        "default": "./dist/fixtures/index.js"
      },
      "import": {
        "types": "./dist/fixtures/index.d.ts",
        "default": "./dist/esm/fixtures/index.mjs"
      }
    },
    "./matchers": {
      "development": "./src/matchers/index.ts",
      "require": {
        "types": "./dist/matchers/index.d.ts",
        "default": "./dist/matchers/index.js"
      },
      "import": {
        "types": "./dist/matchers/index.d.ts",
        "default": "./dist/esm/matchers/index.mjs"
      }
    },
    "./playwright": {
      "development": "./src/playwright/index.ts",
      "require": {
        "types": "./dist/playwright/index.d.ts",
        "default": "./dist/playwright/index.js"
      },
      "import": {
        "types": "./dist/playwright/index.d.ts",
        "default": "./dist/esm/playwright/index.mjs"
      }
    },
    "./esm": null
  },
  "peerDependencies": {
    "@frontmcp/sdk": "0.12.0-rc.1",
    "@frontmcp/ui": "0.12.0-rc.1",
    "@playwright/test": "^1.40.0",
    "jest": "^29.0.0",
    "@jest/globals": "^29.0.0"
  },
  "peerDependenciesMeta": {
    "@frontmcp/ui": {
      "optional": true
    },
    "@playwright/test": {
      "optional": true
    },
    "jest": {
      "optional": true
    },
    "@jest/globals": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@frontmcp/utils": "0.12.0-rc.1",
    "@modelcontextprotocol/sdk": "1.26.0",
    "jose": "^6.0.11",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "typescript": "^5.9.3"
  }
}
