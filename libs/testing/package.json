{
  "name": "@frontmcp/testing",
  "version": "0.4.0",
  "description": "E2E testing framework for FrontMCP servers - MCP client, auth mocks, Playwright integration",
  "author": "AgentFront <info@agentfront.dev>",
  "homepage": "https://docs.agentfront.dev",
  "license": "Apache-2.0",
  "keywords": [
    "mcp",
    "testing",
    "e2e",
    "integration-testing",
    "mcp-client",
    "playwright",
    "agentfront",
    "frontmcp",
    "framework",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agentfront/frontmcp.git"
  },
  "bugs": {
    "url": "https://github.com/agentfront/frontmcp/issues"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./setup": {
      "development": "./src/setup.ts",
      "types": "./dist/src/setup.d.ts",
      "import": "./dist/src/setup.js",
      "default": "./dist/src/setup.js"
    },
    "./jest-preset": {
      "default": "./jest-preset.js"
    },
    "./fixtures": {
      "development": "./src/fixtures/index.ts",
      "types": "./dist/src/fixtures/index.d.ts",
      "import": "./dist/src/fixtures/index.js",
      "default": "./dist/src/fixtures/index.js"
    },
    "./matchers": {
      "development": "./src/matchers/index.ts",
      "types": "./dist/src/matchers/index.d.ts",
      "import": "./dist/src/matchers/index.js",
      "default": "./dist/src/matchers/index.js"
    },
    "./playwright": {
      "development": "./src/playwright/index.ts",
      "types": "./dist/src/playwright/index.d.ts",
      "import": "./dist/src/playwright/index.js",
      "default": "./dist/src/playwright/index.js"
    }
  },
  "peerDependencies": {
    "@frontmcp/sdk": "^0.4.0",
    "@frontmcp/ui": ">=0.4.0",
    "@playwright/test": "^1.40.0",
    "jest": "^29.0.0",
    "@jest/globals": "^29.0.0"
  },
  "peerDependenciesMeta": {
    "@frontmcp/ui": {
      "optional": true
    },
    "@playwright/test": {
      "optional": true
    },
    "jest": {
      "optional": true
    },
    "@jest/globals": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.23.0",
    "jose": "^6.0.11",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "typescript": "^5.9.3"
  }
}
