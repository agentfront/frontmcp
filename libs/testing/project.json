{
  "name": "testing",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/testing/src",
  "projectType": "library",
  "tags": ["scope:libs", "scope:publishable", "versioning:synchronized"],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/testing/dist",
        "main": "libs/testing/src/index.ts",
        "tsConfig": "libs/testing/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "libs/testing/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/testing/README.md", "LICENSE", "libs/testing/jest-preset.js", "libs/testing/package.json"],
        "additionalEntryPoints": [
          "libs/testing/src/setup.ts",
          "libs/testing/src/fixtures/index.ts",
          "libs/testing/src/matchers/index.ts",
          "libs/testing/src/playwright/index.ts"
        ],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": [
            "@frontmcp/sdk",
            "@frontmcp/sdk/*",
            "@frontmcp/ui",
            "@frontmcp/ui/*",
            "@frontmcp/utils",
            "@frontmcp/utils/*",
            "@modelcontextprotocol/sdk",
            "@modelcontextprotocol/sdk/*",
            "@playwright/test",
            "jest",
            "@jest/globals",
            "jose",
            "tslib"
          ]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/testing/dist/esm",
        "main": "libs/testing/src/index.ts",
        "tsConfig": "libs/testing/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "additionalEntryPoints": [
          "libs/testing/src/setup.ts",
          "libs/testing/src/fixtures/index.ts",
          "libs/testing/src/matchers/index.ts",
          "libs/testing/src/playwright/index.ts"
        ],
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": [
            "@frontmcp/sdk",
            "@frontmcp/sdk/*",
            "@frontmcp/ui",
            "@frontmcp/ui/*",
            "@frontmcp/utils",
            "@frontmcp/utils/*",
            "@modelcontextprotocol/sdk",
            "@modelcontextprotocol/sdk/*",
            "@playwright/test",
            "jest",
            "@jest/globals",
            "jose",
            "tslib"
          ]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/testing/dist/package.json"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/testing/jest.config.ts"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/testing/dist --access public --registry=https://registry.npmjs.org/"
      }
    },
    "publish-alpha": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "bash scripts/publish-alpha.sh {projectRoot}/dist",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
