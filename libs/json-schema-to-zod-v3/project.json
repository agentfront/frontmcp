{
  "name": "json-schema-to-zod-v3",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/json-schema-to-zod-v3/src",
  "projectType": "library",
  "tags": ["scope:libs", "scope:publishable"],
  "targets": {
    "build-tsc": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/json-schema-to-zod-v3/dist",
        "main": "libs/json-schema-to-zod-v3/src/index.ts",
        "tsConfig": "libs/json-schema-to-zod-v3/tsconfig.lib.json",
        "assets": ["README.md"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-tsc"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/json-schema-to-zod-v3/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/json-schema-to-zod-v3/dist --access public --registry=https://registry.npmjs.org/"
      }
    }
  }
}
