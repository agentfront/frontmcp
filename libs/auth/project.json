{
  "name": "auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/auth/src",
  "projectType": "library",
  "tags": ["scope:libs", "scope:publishable", "versioning:synchronized"],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/auth/dist",
        "main": "libs/auth/src/index.ts",
        "tsConfig": "libs/auth/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "libs/auth/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/auth/README.md", "LICENSE", "libs/auth/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": ["@frontmcp/utils", "jose", "zod"]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/auth/dist/esm",
        "main": "libs/auth/src/index.ts",
        "tsConfig": "libs/auth/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "skipTypeCheck": true,
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": ["@frontmcp/utils", "jose", "zod"]
        }
      }
    },
    "build-browser-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/auth/dist/browser",
        "main": "libs/auth/src/browser.ts",
        "tsConfig": "libs/auth/tsconfig.lib.json",
        "format": ["esm"],
        "platform": "browser",
        "bundle": true,
        "thirdParty": true,
        "minify": false,
        "skipTypeCheck": true,
        "external": ["zod"],
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "alias": {
            "node:async_hooks": "./libs/sdk/src/browser/shims/async-hooks.ts",
            "node:crypto": "./libs/sdk/src/browser/shims/crypto.ts",
            "node:fs": "./libs/sdk/src/browser/shims/fs.ts",
            "node:fs/promises": "./libs/sdk/src/browser/shims/fs.ts",
            "node:path": "./libs/sdk/src/browser/shims/path.ts",
            "node:os": "./libs/sdk/src/browser/shims/os.ts",
            "path": "./libs/sdk/src/browser/shims/path.ts",
            "crypto": "./libs/sdk/src/browser/shims/crypto.ts",
            "fs": "./libs/sdk/src/browser/shims/fs.ts",
            "child_process": "./libs/sdk/src/browser/shims/empty.ts",
            "node:child_process": "./libs/sdk/src/browser/shims/empty.ts",
            "events": "./libs/sdk/src/browser/shims/events.ts",
            "node:events": "./libs/sdk/src/browser/shims/events.ts",
            "ioredis": "./libs/sdk/src/browser/shims/empty.ts"
          },
          "define": {
            "process.env.NODE_ENV": "\"production\""
          }
        }
      }
    },
    "build-browser-umd": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-browser-esm"],
      "outputs": ["{workspaceRoot}/libs/auth/dist/browser/browser.js"],
      "options": {
        "command": "node scripts/build-browser-umd.mjs libs/auth/src/browser.ts libs/auth/dist/browser/browser.js FrontMCPAuth --external=zod --alias:path=./libs/sdk/src/browser/shims/path.ts --alias:crypto=./libs/sdk/src/browser/shims/crypto.ts --alias:fs=./libs/sdk/src/browser/shims/fs.ts"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm", "build-browser-esm", "build-browser-umd"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/auth/dist/package.json"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/unit/auth"],
      "options": {
        "jestConfig": "libs/auth/jest.config.cts",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/auth/dist --access public --registry=https://registry.npmjs.org/"
      }
    },
    "publish-alpha": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "bash scripts/publish-alpha.sh {projectRoot}/dist",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
