version: '3.8'

services:
  app:
    build:
      context: ../..
      dockerfile: <%= projectRoot %>/Dockerfile
    ports:
      - '3000:3000'
    environment:
      - NODE_ENV=production
<% if (redis === 'docker') { %>
      - REDIS_HOST=redis
      - REDIS_PORT=6379
    depends_on:
      redis:
        condition: service_healthy

  redis:
    image: redis:7-alpine
    ports:
      - '6379:6379'
    healthcheck:
      test: ['CMD', 'redis-cli', 'ping']
      interval: 10s
      timeout: 5s
      retries: 3
<% } %>
