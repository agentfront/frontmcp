{
  "name": "ui-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "ui/components/src",
  "projectType": "library",
  "tags": ["scope:publishable", "versioning:ui", "type:ui-components"],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "ui/components/dist",
        "main": "ui/components/src/index.ts",
        "tsConfig": "ui/components/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "ui/components/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "neutral",
        "assets": ["ui/components/README.md", "LICENSE", "ui/components/package.json"],
        "additionalEntryPoints": ["ui/components/src/ExampleButton/index.ts"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": [
            "react",
            "react-dom",
            "react/*",
            "react-dom/*",
            "@mui/material",
            "@mui/material/*",
            "@emotion/react",
            "@emotion/react/*",
            "@emotion/styled",
            "@emotion/styled/*",
            "@frontmcp/ui",
            "@frontmcp/ui/*"
          ]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "ui/components/dist/esm",
        "main": "ui/components/src/index.ts",
        "tsConfig": "ui/components/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "neutral",
        "additionalEntryPoints": ["ui/components/src/ExampleButton/index.ts"],
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": [
            "react",
            "react-dom",
            "react/*",
            "react-dom/*",
            "@mui/material",
            "@mui/material/*",
            "@emotion/react",
            "@emotion/react/*",
            "@emotion/styled",
            "@emotion/styled/*",
            "@frontmcp/ui",
            "@frontmcp/ui/*"
          ]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js ui/components/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish ui/components/dist --access public --registry=https://registry.npmjs.org/"
      }
    },
    "publish-alpha": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "bash scripts/publish-alpha.sh {projectRoot}/dist",
        "cwd": "{workspaceRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/unit/ui-components"],
      "options": {
        "jestConfig": "ui/components/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
