{
  "name": "plugin-store",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "plugins/plugin-store/src",
  "projectType": "library",
  "tags": ["scope:plugins", "scope:publishable", "versioning:synchronized"],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "plugins/plugin-store/dist",
        "main": "plugins/plugin-store/src/index.ts",
        "tsConfig": "plugins/plugin-store/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "plugins/plugin-store/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["LICENSE", "plugins/plugin-store/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": [
            "valtio",
            "valtio/vanilla",
            "@frontmcp/sdk",
            "@frontmcp/sdk/*",
            "@modelcontextprotocol/sdk",
            "@modelcontextprotocol/sdk/*",
            "reflect-metadata"
          ]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "plugins/plugin-store/dist/esm",
        "main": "plugins/plugin-store/src/index.ts",
        "tsConfig": "plugins/plugin-store/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": [
            "valtio",
            "valtio/vanilla",
            "@frontmcp/sdk",
            "@frontmcp/sdk/*",
            "@modelcontextprotocol/sdk",
            "@modelcontextprotocol/sdk/*",
            "reflect-metadata"
          ]
        }
      }
    },
    "build-browser-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "plugins/plugin-store/dist/browser",
        "main": "plugins/plugin-store/src/browser.ts",
        "tsConfig": "plugins/plugin-store/tsconfig.lib.json",
        "format": ["esm"],
        "platform": "browser",
        "bundle": true,
        "thirdParty": true,
        "minify": false,
        "skipTypeCheck": true,
        "external": ["reflect-metadata"],
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "alias": {
            "node:async_hooks": "./libs/sdk/src/browser/shims/async-hooks.ts",
            "node:crypto": "./libs/sdk/src/browser/shims/crypto.ts",
            "node:fs": "./libs/sdk/src/browser/shims/fs.ts",
            "node:fs/promises": "./libs/sdk/src/browser/shims/fs.ts",
            "node:path": "./libs/sdk/src/browser/shims/path.ts",
            "node:os": "./libs/sdk/src/browser/shims/os.ts",
            "child_process": "./libs/sdk/src/browser/shims/empty.ts",
            "node:child_process": "./libs/sdk/src/browser/shims/empty.ts",
            "path": "./libs/sdk/src/browser/shims/path.ts",
            "crypto": "./libs/sdk/src/browser/shims/crypto.ts",
            "fs": "./libs/sdk/src/browser/shims/fs.ts",
            "fs/promises": "./libs/sdk/src/browser/shims/fs.ts",
            "events": "./libs/sdk/src/browser/shims/events.ts",
            "node:events": "./libs/sdk/src/browser/shims/events.ts"
          },
          "define": {
            "process.env.NODE_ENV": "\"production\""
          }
        }
      }
    },
    "build-browser-umd": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-browser-esm"],
      "outputs": ["{workspaceRoot}/plugins/plugin-store/dist/browser/browser.js"],
      "options": {
        "command": "node scripts/build-browser-umd.mjs plugins/plugin-store/src/browser.ts plugins/plugin-store/dist/browser/browser.js FrontMCPStore --external=reflect-metadata"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm", "build-browser-esm", "build-browser-umd"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js plugins/plugin-store/dist/package.json"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/unit/plugin-store"],
      "options": {
        "jestConfig": "plugins/plugin-store/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish plugins/plugin-store/dist --access public --registry=https://registry.npmjs.org/"
      }
    },
    "publish-alpha": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "bash scripts/publish-alpha.sh {projectRoot}/dist",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
