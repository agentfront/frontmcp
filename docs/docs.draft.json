{
  "$schema": "https://mintlify.com/docs.json",
  "name": "FrontMCP",
  "description": "A TypeScript-first framework for building production ready Model Context Protocol (MCP) servers",
  "appearance": {
    "default": "system",
    "strict": false
  },
  "theme": "almond",
  "favicon": "/assets/logo/logo.light.png",
  "logo": {
    "light": "/assets/logo/frontmcp.light.png",
    "dark": "/assets/logo/frontmcp.dark.png"
  },
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "contextual": {
    "options": ["copy", "chatgpt", "cursor", "mcp", "view"]
  },
  "interaction": {
    "drilldown": true
  },
  "seo": {
    "indexing": "navigable",
    "metatags": {
      "canonical": "https://agentfront.dev",
      "og:image": "/assets/logo/banner.dark.png",
      "charset": "UTF-8",
      "viewport": "width=device-width, initial-scale=1.0",
      "keywords": "mcp, dependencyinjection, sdk, adapters, plugins, agentfront, frontmcp, framework, typescript, json-schema, zod, zod-v3, schemavalidation, openapi, apivalidation, typesafety, runtimevalidation"
    }
  },
  "navbar": {
    "links": [
      {
        "href": "https://github.com/agentfront/frontmcp/tree/main/apps/demo",
        "icon": "github",
        "label": "Examples"
      }
    ],
    "primary": {
      "href": "https://github.com/agentfront/frontmcp",
      "type": "github"
    }
  },
  "search": {
    "prompt": "Search the FrontMCP docs..."
  },
  "styling": {
    "codeblocks": {
      "theme": {
        "dark": "dark-plus",
        "light": "snazzy-light"
      }
    }
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "book",
        "groups": [
          {
            "tag": "draft",
            "group": "Get Started",
            "pages": [
              "draft/docs/getting-started/welcome",
              "draft/docs/getting-started/installation",
              "draft/docs/getting-started/quickstart",
              "updates"
            ]
          },
          {
            "group": "Servers",
            "pages": [
              "draft/docs/servers/server",
              {
                "group": "Core Components",
                "icon": "toolbox",
                "pages": [
                  "draft/docs/servers/apps",
                  "draft/docs/servers/tools",
                  "draft/docs/servers/resources",
                  "draft/docs/servers/prompts"
                ]
              },
              {
                "group": "Authentication",
                "icon": "shield-check",
                "pages": [
                  "draft/docs/servers/authentication/overview",
                  "draft/docs/servers/authentication/token",
                  "draft/docs/servers/authentication/remote",
                  "draft/docs/servers/authentication/remote-proxy",
                  "draft/docs/servers/authentication/local"
                ]
              },
              {
                "group": "Extensibility Components",
                "icon": "toolbox",
                "pages": [
                  "draft/docs/servers/extensibility/providers",
                  "draft/docs/servers/extensibility/plugins",
                  "draft/docs/servers/extensibility/logging"
                ]
              }
            ]
          },
          {
            "group": "Adapters",
            "pages": ["draft/docs/adapters/overview", "draft/docs/adapters/openapi-adapter"]
          },
          {
            "group": "Plugins",
            "pages": ["draft/docs/plugins/cache-plugin"]
          },
          {
            "group": "Deployment",
            "pages": ["draft/docs/deployment/local-dev-server", "draft/docs/deployment/production-build"]
          }
        ]
      },
      {
        "dropdown": "Blog",
        "icon": "blog",
        "groups": [
          {
            "group": "General",
            "pages": ["blog/index", "blog/external-links"]
          },
          {
            "group": "November 2025",
            "pages": [
              "blog/11-2025/openapi-mcp-security-nightmare",
              "blog/11-2025/mcp-run-out-of-socket",
              "blog/11-2025/introducing-frontmcp"
            ]
          }
        ]
      }
    ]
  }
}
