{
  "$schema": "https://mintlify.com/docs.json",
  "name": "FrontMCP",
  "description": "A TypeScript-first framework for building production ready Model Context Protocol (MCP) servers",
  "appearance": {
    "default": "system",
    "strict": false
  },
  "theme": "almond",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "contextual": {
    "options": [
      "copy",
      "view"
    ]
  },
  "interaction": {
    "drilldown": true
  },
  "navbar": {
    "links": [
      {
        "href": "https://github.com/agentfront/frontmcp-examples",
        "icon": "github",
        "label": "Examples"
      }
    ],
    "primary": {
      "href": "https://github.com/agentfront/frontmcp",
      "type": "github"
    }
  },
  "search": {
    "prompt": "Search the FrontMCP docs..."
  },
  "styling": {
    "codeblocks": {
      "theme": {
        "dark": "dark-plus",
        "light": "snazzy-light"
      }
    }
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "book",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "getting-started/welcome",
              "getting-started/installation",
              "getting-started/quickstart",
              "updates"
            ]
          },
          {
            "group": "Servers",
            "pages": [
              "servers/server",
              {
                "group": "Core Components",
                "icon": "toolbox",
                "pages": [
                  "servers/apps",
                  "servers/tools",
                  "servers/resources",
                  "servers/prompts"
                ]
              },
              {
                "group": "Authentication",
                "icon": "shield-check",
                "pages": [
                  "servers/authentication/overview",
                  "servers/authentication/token",
                  "servers/authentication/remote",
                  "servers/authentication/remote-proxy",
                  "servers/authentication/local"
                ]
              },
              {
                "group": "Extensibility Components",
                "icon": "toolbox",
                "pages": [
                  "servers/extensibility/providers",
                  "servers/extensibility/adapters",
                  "servers/extensibility/plugins",
                  "servers/extensibility/logging"
                ]
              }
            ]
          },
          {
            "group": "Deployment",
            "pages": [
              "deployment/local-dev-server",
              "deployment/production-build"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/add-openapi-adapter",
              "guides/caching-and-cache-miss",
              "guides/customize-flow-stages"
            ]
          },
          {
            "group": "Adapters",
            "pages": [
              "adapters/openapi-adapter"
            ]
          }
        ]
      }
    ]
  }
}
