{
  "$schema": "https://mintlify.com/docs.json",
  "name": "FrontMCP",
  "description": "A TypeScript-first framework for building production ready Model Context Protocol (MCP) servers",
  "appearance": {
    "default": "system",
    "strict": false
  },
  "theme": "almond",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "contextual": {
    "options": [
      "copy",
      "view"
    ]
  },
  "interaction": {
    "drilldown": true
  },
  "navbar": {
    "links": [
      {
        "href": "https://github.com/agentfront/frontmcp-examples",
        "icon": "github",
        "label": "Examples"
      }
    ],
    "primary": {
      "href": "https://github.com/agentfront/frontmcp",
      "type": "github"
    }
  },
  "search": {
    "prompt": "Search the FrontMCP docs..."
  },
  "styling": {
    "codeblocks": {
      "theme": {
        "dark": "dark-plus",
        "light": "snazzy-light"
      }
    }
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "book",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "getting-started/welcome",
              "getting-started/quickstart",
              "getting-started/installation",
              "updates"
            ]
          },
          {
            "group": "Servers",
            "pages": [
              "servers/overview",
              {
                "group": "Core Components",
                "icon": "toolbox",
                "pages": [
                  "servers/apps",
                  "servers/tools",
                  "servers/resources",
                  "servers/prompts"
                ]
              },
              {
                "group": "Authentication",
                "icon": "shield-check",
                "pages": [
                  "servers/authentication/overview",
                  "servers/authentication/authorization",
                  {
                    "group": "Remote OAuth",
                    "pages": [
                      "servers/authentication/remote",
                      "servers/authentication/remote-proxy"
                    ]
                  },
                  {
                    "group": "Local OAuth",
                    "pages": [
                      "servers/authentication/local",
                      "servers/authentication/local-proxy"
                    ]
                  }
                ]
              },
              {
                "group": "Extensibility Components",
                "icon": "toolbox",
                "pages": [
                  "servers/providers",
                  "servers/adapters",
                  "servers/plugins"
                ]
              },
              {
                "group": "Advanced Components",
                "icon": "cube",
                "pages": [
                  "servers/flows",
                  "servers/hooks",
                  "servers/auth-providers"
                ]
              }
            ]
          },
          {
            "group": "Deployment",
            "pages": [
              "deployment/local-dev-server",
              "deployment/production-build"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/build-a-server",
              "guides/write-a-tool",
              "guides/customize-flow-stages",
              "guides/add-openapi-adapter",
              "guides/use-providers-and-di",
              "guides/proxy-auth",
              "guides/session-consent-ux",
              "guides/caching-and-cache-miss",
              "guides/rate-limits-and-semaphores",
              "guides/transport-selection-rules"
            ]
          }
        ]
      },
      {
        "dropdown": "SDK Reference",
        "icon": "code",
        "groups": [
          {
            "group": "common",
            "pages": [
              {
                "group": "Decorators",
                "pages": [
                  "sdk/common/decorators"
                ]
              },
              {
                "group": "Interfaces & Types",
                "pages": [
                  "sdk/common/interfaces"
                ]
              }
            ]
          },
          {
            "group": "core",
            "pages": [
              {
                "group": "Decorators",
                "pages": [
                  "sdk/core/decorators"
                ]
              },
              {
                "group": "Interfaces & Types",
                "pages": [
                  "sdk/core/interfaces"
                ]
              }
            ]
          }
        ]
      }
    ]
  }
