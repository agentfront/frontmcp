{
  "$schema": "https://mintlify.com/docs.json",
  "name": "FrontMCP",
  "description": "A TypeScript-first framework for building Model Context Protocol (MCP) servers",
  "appearance": {
    "default": "system",
    "strict": false
  },
  "theme": "almond",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "contextual": {
    "options": ["copy", "view"]
  },
  "interaction": {
    "drilldown": true
  },
  "navbar": {
    "links": [
      {
        "href": "https://github.com/agentfront/frontmcp",
        "icon": "github",
        "label": "GitHub"
      }
    ],
    "primary": {
      "href": "https://github.com/agentfront/frontmcp",
      "type": "github"
    }
  },
  "search": {
    "prompt": "Search the FrontMCP docs..."
  },
  "styling": {
    "codeblocks": {
      "theme": {
        "dark": "dark-plus",
        "light": "snazzy-light"
      }
    }
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "book",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "getting-started/quickstart",
              "getting-started/installation",
              "getting-started/welcome"
            ]
          },
          {
            "group": "Servers",
            "pages": [
              "servers/server",
              {
                "group": "Core Components",
                "icon": "toolbox",
                "pages": [
                  "servers/apps",
                  "servers/providers",
                  "servers/http",
                  "servers/logging"
                ]
              },
              {
                "group": "Code Components",
                "icon": "cube",
                "pages": [
                  "servers/tools",
                  "servers/resources",
                  "servers/prompts"
                ]
              },
              {
                "group": "Authentication",
                "icon": "shield-check",
                "pages": [
                  "servers/authentication/overview",
                  "servers/authentication/remote",
                  "servers/authentication/proxy",
                  "servers/authentication/session",
                  "servers/authentication/token-verification"
                ]
              },
              {
                "group": "Extensibility",
                "icon": "puzzle",
                "pages": [
                  "servers/extensibility/providers-di",
                  "servers/extensibility/adapters",
                  "servers/extensibility/plugins"
                ]
              },
              {
                "group": "Advanced",
                "icon": "stars",
                "pages": [
                  "servers/serve-flag",
                  "servers/tokens",
                  "servers/errors"
                ]
              }
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "configuration/metadata",
              {
                "group": "Options",
                "icon": "settings",
                "pages": [
                  "configuration/options/apps",
                  "configuration/options/providers",
                  "configuration/options/http",
                  "configuration/options/logging",
                  "configuration/options/authentication"
                ]
              }
            ]
          },
          {
            "group": "SDK Reference",
            "pages": [
              {
                "group": "Decorators",
                "pages": [
                  "api/decorators/front-mcp"
                ]
              },
              {
                "group": "Common",
                "pages": [
                  "typescript-sdk/common/tokens",
                  "typescript-sdk/common/metadata"
                ]
              },
              {
                "group": "Core",
                "pages": [
                  "typescript-sdk/core/instance",
                  "typescript-sdk/core/transports"
                ]
              }
            ]
          },
          {
            "group": "Deployment",
            "pages": [
              "deployment/dev-mode",
              "deployment/docker",
              "deployment/production"
            ]
          }
        ]
      }
    ]
  }
}
